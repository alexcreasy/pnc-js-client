{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strict": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts"
    ],
}